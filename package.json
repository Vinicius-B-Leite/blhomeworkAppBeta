		"@react-navigation/native": "^6.1.9",
		"@react-navigation/native-stack": "^6.9.17",
		"@shopify/restyle": "^2.4.2",
		"@supabase/supabase-js": "^2.39.3",
		"@tanstack/react-query": "^5.18.1",
		"base64-arraybuffer": "^1.0.2",
		"expo": "~52.0.35",
		"expo-dev-client": "~5.0.12",
