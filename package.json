		"expo-web-browser": "~14.0.2",
		"jest": "^29.3.1",
		"jest-expo": "~52.0.4",
		"react": "18.3.1",
		"react-dom": "18.3.1",
		"react-hook-form": "^7.50.1",
		"react-native": "0.76.7",
		"react-native-gesture-handler": "~2.20.2",
